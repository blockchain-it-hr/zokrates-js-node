{
  "name": "zokrates-js-node",
  "main": "index.js",
  "author": "Darko Macesic <darem966@gmail.com>, Edi Sinovcic <edi@blockchain-it.hr>",
  "version": "1.0.3",
  "keywords": [
    "zokrates",
    "wasm-bindgen",
    "zksnarks"
  ],
  "license": "GPLv3",
  "files": [
    "index.js",
    "stdlib.json",
    "pkg",
    "lib"
  ],
  "repository": {
    "type" : "git",
    "url" : "https://github.com/blockchain-it-hr/zokrates-js-node"
  },
  "types": "lib/index.d.ts",
  "scripts": {
    "cargo:build": "cargo build --target=wasm32-unknown-unknown",
    "wasm-pack:build": "wasm-pack build --out-name index --release --target nodejs",
    "build": "npm install && rimraf pkg && npm run stdlib && npm run wasm-pack:build && gulp stdlib",
    "stdlib": "sh scripts/get_stdlib.sh",
    "publish": "npm run build && npm version patch && npm publish"
  },
  "devDependencies": {
    "dree": "^2.1.10",
    "gulp": "^4.0.2",
    "gulp-cli": "^2.2.0",
    "rimraf": "^3.0.0",
    "text-encoding": "^0.7.0"
  },
  "dependencies": {}
}
